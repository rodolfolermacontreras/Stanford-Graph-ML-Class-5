{
	"name": "xcs224w",
	"image": "xcs224w:latest",
	"initializeCommand": [
		"docker",
		"build",

		// If you are on x64 CPU based device (MacOS with Intel CPU for example) uncomment below line
		// "--platform=linux/amd64", "--build-arg", "DEVICE=cpu", "--build-arg", "BASE_IMAGE=ubuntu:20.04",
		
		// If you are on MacOS with Apple silicon uncomment below line
		// "--platform=linux/arm64", "--build-arg", "BASE_IMAGE=arm64v8/ubuntu:20.04",

		// If you are on x64 CPU with CUDA(Nvidia) GPU device uncomment below line
		// "--platform=linux/amd64", "--build-arg", "DEVICE=cu116", "--build-arg", "BASE_IMAGE=nvidia/cuda:11.6.0-runtime-ubuntu20.04",

		"-t", "xcs224w:latest",
		".devcontainer"
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
	"workspaceFolder": "/workspace",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": null
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		6006,
		8888
	],
	// Uncomment the next line to run commands after the container is created - for example installing curl.
	// "postCreateCommand": "apt-get update && apt-get install -y curl",
	"runArgs": [
		"-it",
		"--privileged",
		// Uncomment out the line below if you have a NVIDIA GPU device 
		// "--gpus", "all",
		"-m",
		"8g",
		"--shm-size",
		"1g"
	]
}